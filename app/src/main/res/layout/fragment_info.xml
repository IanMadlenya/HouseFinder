<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_margin="3dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <include
        android:id="@+id/tool_bar_placeholder"
        layout="@layout/tool_bar_placeholder"/>

    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_weight="1"
        tools:context="com.henrydyc.housefinder.InfoFragment"
        android:layout_marginBottom="5dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:paddingBottom="5dp"
            android:background="#000000">


            <TableRow
                android:id="@+id/row_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="1dp"
                android:padding="3dp"
                android:background="#fff"
                >

                <TextView
                    android:text= "See more details on Zillow:"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_margin="2dp"
                    android:gravity="left"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#fff"
                >
                <TextView
                    android:id="@+id/link"
                    android:text= "property link is not available"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FBF0FF"
                >
                <TextView
                    android:text= "Property Type"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/propertyType"
                    android:text= ""
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/row_yearBuilt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#fff">
                <TextView
                    android:text= "Year Built"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/yearBuilt"
                    android:text= ""
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FBF0FF">
                <TextView
                    android:text= "Lot Size"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/lotSize"
                    android:text= ""
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FFF">
                <TextView
                    android:text= "Finished Area"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/finishedArea"
                    android:text= ""
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FBF0FF">
                <TextView
                    android:text= "Bathrooms"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/bathrooms"
                    android:text= ""
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FFF">
                <TextView
                    android:text= "Bedrooms"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/bedrooms"
                    android:text= ""
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FBF0FF">
                <TextView
                    android:text= "Tax Assessment Year"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/taxAssessmentYear"
                    android:text= ""
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FFF">
                <TextView
                    android:text= "Tax Assessment"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/taxAssessment"
                    android:text= ""
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FBF0FF">
                <TextView
                    android:text= "Last Sold Price"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/lastSoldPrice"
                    android:text= ""
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FFF">
                <TextView
                    android:text= "Last Sold Date"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/lastSoldDate"
                    android:text= ""
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FBF0FF">
                <TextView
                    android:id="@+id/propertyEstimateDate"
                    android:layout_width="0dp"
                    android:text= "Zestimate  Property Estimate as of"
                    android:layout_weight="1.2"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/propertyEstimateAmount"
                    android:layout_width="0dp"
                    android:text= ""
                    android:layout_weight="0.8"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FFF">
                <TextView
                    android:text= "30 Days Overall Change"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_margin="2dp"
                    >

                    <ImageView
                        android:id="@+id/thirtyDaysOverallChangeArrow"
                        android:layout_width="12dp"
                        android:layout_height="15dp"
                        android:paddingRight="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:background="#FFF"
                        />
                    <TextView
                        android:id="@+id/thirtyDaysOverallChange"
                        android:layout_toRightOf="@id/thirtyDaysOverallChangeArrow"
                        android:text= ""
                        android:gravity="right"
                        android:layout_marginLeft="0dp"
                        android:paddingLeft="0dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FBF0FF">
                <TextView
                    android:layout_width="0dp"
                    android:text= "All Time Property Range"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/allTimePropertyRange"
                    android:layout_width="0dp"
                    android:text= ""
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FFF">
                <TextView
                    android:id="@+id/rentEstimateDate"
                    android:layout_width="0dp"
                    android:text= "Rent Zestimate Valuation as of"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/rentEstimateAmount"
                    android:layout_width="0dp"
                    android:text= ""
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:padding="3dp"
                android:background="#FBF0FF">
                <TextView
                    android:text= "30 Days Rent Change"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_margin="2dp"
                    >

                    <ImageView
                        android:id="@+id/thirtyDaysRentChangeArrow"
                        android:layout_width="12dp"
                        android:layout_height="15dp"
                        android:paddingRight="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:background="#FBF0FF"
                        />
                    <TextView
                        android:id="@+id/thirtyDaysRentChange"
                        android:layout_toRightOf="@id/thirtyDaysRentChangeArrow"
                        android:text= ""
                        android:gravity="right"
                        android:layout_marginLeft="0dp"
                        android:paddingLeft="0dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="2dp"
                android:padding="3dp"
                android:background="#FFF">
                <TextView
                    android:layout_width="0dp"
                    android:text= "All Time Rent Range"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:id="@+id/allTimeRentRange"
                    android:layout_width="0dp"
                    android:text= ""
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
            </TableRow>
        </TableLayout>
    </ScrollView>
    <TextView
        android:text= "Zillow, Inc., 2006-2014"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/termsOfUse"
        android:text= "@string/termsOfUse"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/whatIsZestimate"
        android:text= "@string/whatIsZestimate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        />
</LinearLayout>

